<div class="row">
  <div class="col-md-3">
    <% @chat_rooms.each do |chat_room| %>
      <div class="sidebar-name">
          <%= link_to(chat_room_path(chat_room), id: "link_chat_room_#{chat_room.id}", class: "no-underline", remote: true) do %>
            <%= image_tag((chat_room.users - [current_user]).first.avatar_url(:comment_avatar)) %>
            <span><%= chat_room.get_user_names(current_user) %></span>
          <% end %>

          </a>
      </div>
    <% end %>
  </div>

  <div class="col-md-6">
    <div id="messages-area">
      <div class="panel panel-primary messages-box" style="border:0px">
      </div>
    </div>
    <div id="chat-form">

    </div>
  </div>
</div>

<script type="text/javascript">
  $( document ).ready(function() {
    document.getElementById("link_chat_room_<%= params[:chat_room_id] %>").click()
  });
</script>
