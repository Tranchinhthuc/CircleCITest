<div id="office-comments" class="tab-pane fade">
  <h3>Nhận xét</h3>
  <div class="row">
    <% if user_signed_in? %>
      <%= form_for [@office , @comment], remote: true do |f| %>
        <div class="form-group">
          <div class="col-sm-10">
            <%= f.text_field :content, :required => true, class: "form-control", placeholder: "Comment here...", id: "root_comment_content" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-sm-10">
        Cần <%= link_to "đăng nhập", user_session_path, class: "navbar-link" %> để nhận xét.
      </div>
    <% end%>
  </div>

<br>
  <!-- <div class="row"> -->
    <ul class="list-unstyled">
      <% @root_comments.each do |comment| %>
        <%= render "comments/comment", comment: comment %>
      <% end %>
    </ul>
  <!-- </div> -->
</div>
